{
  "version": 2,
  "builds": [
    {
      "src": "my_web3/wsgi.py",
      "use": "@vercel/python"
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "my_web3/wsgi.py"
    }
  ]
}
{
  "scripts": {
    "install-pip": "npm install -g python3-pip"
  }
}{
  "build": {
    "command": "npm run install-pip && pip install -r requirements.txt && python manage.py collectstatic"
  }
}